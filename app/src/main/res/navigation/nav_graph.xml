<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_formulario">

    <fragment
        android:id="@+id/nav_formulario"
        android:name="com.example.formandlistapp.FormularioFragment"
        android:label="Registrar"
        tools:layout="@layout/fragment_formulario">
        <action
            android:id="@+id/action_formularioFragment_to_datosFragment"
            app:destination="@id/nav_lista"
            app:popUpTo="@id/nav_formulario"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_lista"
        android:name="com.example.formandlistapp.DatosFragment"
        android:label="Ver Registros"
        tools:layout="@layout/fragment_datos" />

    <fragment
        android:id="@+id/nav_producto"
        android:name="com.example.formandlistapp.ProductoFragment"
        android:label="Productos"
        tools:layout="@layout/fragment_producto">
        <action
            android:id="@+id/action_productoFragment_to_detalleProductoFragment"
            app:destination="@id/nav_detalle_producto" />
    </fragment>

    <fragment
        android:id="@+id/nav_detalle_producto"
        android:name="com.example.formandlistapp.DetalleProductoFragment"
        android:label="Detalle Producto"
        tools:layout="@layout/fragment_detalle_producto">
        <argument
            android:name="product"
            app:argType="com.example.formandlistapp.Product" />
    </fragment>

</navigation>
